// button
.mint-button
  color: black
  width: 100%
  padding: 0
  height: 100%
  box-shadow: none
  background-color: rgba(0, 0, 0, 0)
  border-radius: 0
  .mint-button-text
    width: 100%
    height: 100%

// button点击特效
.mint-button::after
  background-color: rgba(255, 255, 255, 0.6)

// toast
.mint-toast.is-placemiddle
  z-index: 99999
  top: 30%
  .mint-toast-text
    font-size: 0.27rem

// input容器
.mint-cell
  background: none
  &:last-child
    background: none
  .mint-cell-wrapper
    background: none

input
