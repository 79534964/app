// 弹框
.mint-msgbox
  top: 40%
  min-width: 280px
  width: 80%
  font-size: 0.27rem
  .mint-msgbox-header
    display: none
  .mint-msgbox-content
    padding: 0.45rem 0.4rem
    min-height: inherit
    .mint-msgbox-message
      font-size: 0.3rem
      line-height: 0.4rem
      color: #606263
    .mint-msgbox-input
      padding-top: 0.2rem
      input
        padding: 0.13rem
        width: 95%
      .mint-msgbox-errormsg
        min-height: 0.4rem
        font-size: 0.2rem
        margin-top: 0.05rem
  button
    font-size: 0.3rem
  .mint-msgbox-btns
    height: 0.8rem
    line-height: 0.8rem
    button
      line-height: 0.8rem

// 滚动条
.swiper-scrollbar
  width: 3px !important

// button
.mint-button
  color: black
  width: 100%
  padding: 0
  height: 100%
  box-shadow: none
  background-color: rgba(0, 0, 0, 0)
  border-radius: 0
  .mint-button-text
    width: 100%
    height: 100%

// button点击特效
.mint-button::after
  background-color: rgba(255, 255, 255, 0.6)

// 地图的图标
.amap-maps
  .amap-marker
    .amap-icon
      width: 25px !important
      height: 40px !important

// 高德logo
.amap-logo, .amap-copyright
  display: none !important

// toast
.mint-toast.is-placemiddle
  top: 30%
  .mint-toast-text
    font-size: 0.27rem

// input容器
.mint-cell
  background: none
  &:last-child
    background: none
  .mint-cell-wrapper
    background: none
