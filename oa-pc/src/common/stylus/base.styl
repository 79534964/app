html, body
  min-width: 1200px
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif
  height: 100%

@media screen and (max-height: 890px)
  html
    overflow-y: scroll

// 覆盖主题颜色
.el-button--primary
  background-color: #0663a2
  &:focus, &:hover
    background: #0663a2

.el-pager li.active
  background-color: #0663a2

.el-message-box
  margin-top: -200px

.el-date-table td
  line-height 32px

.el-tooltip__popper
  color: #393838
  font-size: 14px
  border: none !important
  padding: 15px
  box-shadow: 0px 2px 6px -1px #0663a2

.el-pagination
  text-align: center
  margin-top: 14px
  .el-pagination__total
    font-size: 18px
    height: 35px
    line-height: 35px
  .disabled, .btn-prev, .btn-next
    min-width: 30px
    height: 35px
    line-height: 35px
  .el-pager
    li
      font-size: 20px
      min-width: 40px
      height: 35px
      line-height: 35px
  .el-pagination__jump
    font-size: 20px
    height: 35px
    line-height: 35px
    input
      width: 45px !important

.el-dialog__wrapper
  min-width: 1200px
